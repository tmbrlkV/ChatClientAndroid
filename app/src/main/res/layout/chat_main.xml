<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|none"
        android:ems="10"
        android:background="@drawable/message_text"
        android:textSize="38sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:id="@+id/editTextMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendMessageButton"
        android:layout_toStartOf="@+id/sendMessageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:id="@+id/sendMessageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_board"
        android:textSize="25sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:id="@+id/boardChatTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sendMessageButton"
        android:layout_alignRight="@+id/sendMessageButton"
        android:layout_alignEnd="@+id/sendMessageButton" />
</RelativeLayout>